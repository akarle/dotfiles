#!/bin/sh
# hooman -- print fields in human-readable sizes
die() {
    echo "$1" 2>&1
    exit 1
}

usage() {
    die "usage: hooman [-h N] FIELD [FIELD2 FIELD3 ...]"
}

[ -z "$1" ] && usage

case "$1" in
    -h)
        [ -z "$2" ] && usage
        header="--header=$2"
        shift 2
        ;;
esac

numfmt $header --field="$*" --to=iec-i --suffix=B --padding=7 --round=nearest
